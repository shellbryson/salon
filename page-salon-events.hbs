{{!< default}}

<div class="sal-split-uneven">
  <div>
    <div class="lane">
      <div class="panel content">
        {{#post}}
          <h1>{{title}}</h1>
          {{content}}
        {{/post}}
      </div>
    </div>

    <div class="sal-event-list">
      {{#get "posts" filter="tags:events" include="tags,authors"}}
      {{#foreach posts}}
      <div class="sal-event-list__event">
        <div class="sal-event-list__title">
          <a href="/blog/{{slug}}"><h2>{{title}}</h2></a>
          <p>{{excerpt}}</p>
        </div>
        {{#if feature_image}}
        <img src="{{img_url feature_image}}" alt="{{title}}" />
        {{/if}}
      </div>
      {{/foreach}}
      {{/get}}
    </div>

  </div>

  {{>sidebar}}
</div>