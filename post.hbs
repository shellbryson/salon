{{!< default}}

<div class="sal-split-uneven">
  <div>
    {{#post}}
    <div class="sal-post">
      <div class="sal-content">
        {{#if feature_image}}
        <div class="sal-post__thumb sal-post__thumb--pre">
          <img src="{{img_url feature_image}}" alt="{{title}}" class="thumb" />
        </div>
        {{/if}}
        <div class="sal-post__title">
          <h2>{{title}}</h2>
        </div>
        <div>
          {{content}}
        </div>
      </div>
    </div>
    {{/post}}
  </div>

  {{>sidebar}}
</div>